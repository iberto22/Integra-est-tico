<%- include('../templates/head') %>
<link rel="stylesheet" href="/static/css/contactos.css" />

<!-- ===========================
     HERO SUPERIOR
=========================== -->
<section class="contact-hero">
  <div class="hero-card">
    <h1>Contacta amb nosaltres</h1>
    <p>
      Estem aquí per ajudar-te. Envia'ns un missatge o visita'ns al nostre
      centre.
    </p>
  </div>
</section>

<!-- ===========================
     CUERPO PRINCIPAL
=========================== -->
<section class="contact-body container">
  <div class="contact-wrapper">
    <!-- COLUMNA IZQUIERDA: FORMULARIO -->
    <div class="form-column">
      <h2 class="form-title">Envia'ns un missatge</h2>

      <form action="/contacto" method="POST" class="contact-form">
        <% if (success) { %>
        <div class="alert success">
          El teu missatge s'ha enviat correctament.
        </div>
        <% } %>

        <label
          >Nom complet
          <input type="text" name="name" placeholder="El teu nom" required />
        </label>

        <label
          >Correu electrònic
          <input
            type="email"
            name="email"
            placeholder="tucorreu@exemple.com"
            required
          />
        </label>

        <label
          >Telèfon
          <input type="phone" name="phone" placeholder="El teu telèfon" />
        </label>

        <label
          >Missatge
          <textarea
            name="message"
            rows="4"
            placeholder="Com et podem ajudar?"
            required
          ></textarea>
        </label>
        <button class="btn-primary" type="submit">Enviar</button>
      </form>
    </div>

    <!-- COLUMNA DERECHA: INFO + MAPA -->
    <div class="info-column">
      <!-- TARJETA VERDE -->
      <div class="contact-card">
        <h3>Informació de contacte</h3>

        <div class="info-item">
          <div class="icon-circle">
            <img src="/static/icons/location.svg" alt="Ubicació" />
          </div>
          <div>
            <h4>Ubicació</h4>
            <p>Carrer de Francesc Tàrrega, 16<br />08027 Barcelona</p>
          </div>
        </div>

        <div class="info-item">
          <div class="icon-circle">
            <img src="/static/icons/phone.svg" alt="Telèfon" />
          </div>
          <div>
            <h4>Telèfon</h4>
            <p>663 01 38 61</p>
          </div>
        </div>

        <div class="info-item">
          <div class="icon-circle">
            <img src="/static/icons/gmail.svg" alt="Email" />
          </div>
          <div>
            <h4>Email</h4>
            <p>integracontacte@gmail.com</p>
          </div>
        </div>

        <div class="info-item">
          <div class="icon-circle">
            <img src="/static/icons/clock.svg" alt="Horaris" />
          </div>
          <div>
            <h4>Horaris</h4>
            <p>Dl - Dv: 9:00 - 21:00<br />Ds: 8:00 - 14:00</p>
          </div>
        </div>
      </div>

      <!-- MAPA -->
      <div class="map-container">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2992.486362376666!2d2.1834563!3d41.4242683!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12a4bd2a0b0b0b0b%3A0x0!2zQ2FycmVyIGRlIEZyYW5jZXNjIFTDoHJyZWdhLCAxNiwgMDgwMjcgQmFyY2Vsb25h!5e0!3m2!1ses!2ses!4v1600000000000!5m2!1ses!2ses"
          width="100%"
          height="250"
          style="border: 0"
          allowfullscreen=""
          loading="lazy"
        >
        </iframe>
      </div>
    </div>
  </div>
</section>

<%- include('../templates/footer') %>
