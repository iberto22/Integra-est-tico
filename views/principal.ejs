<%- include('../templates/head') %>
<link rel="stylesheet" href="/static/css/principal.css">

<section class="hero" style="background-image:url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48');">
  <div class="hero-inner">
    <img src="/static/img/logo-full.png" class="hero-logo-full" alt="Integra Logo">
    <div class="hero-content">
      
      <h1 class="lead">Centro de terapias y salud para tu cuidado.</h1>

      <div class="hero-buttons">
        <a class="btn primary" href="/nosotros">Sobre nosotros</a>
        <a class="btn outline" href="/contactos">Contactar</a>
      </div>
    </div>
  </div>
</section>

<section class="who">
  <div class="container" >
    <h2>¿Quiénes somos?</h2>
    <p>Somos un centro deportivo y sanitario con experiencia clínica y entrenamiento de alto rendimiento.</p>
    <a class="btn primary" href="/nosotros">Ver más</a>
  </div>
</section>

<section class="services-preview">
  <div class="container">
    <h2>Servicios principales</h2>

    <div class="cards">
      <% services.slice(0,4).forEach(function(s){ %>
        <div class="card">
          <img src="<%= s.image %>" alt="<%= s.title %>">
          <h3><%= s.title %></h3>
          <p><%= s.shortDescription %></p>
          <a class="btn small primary" href="/servicio/<%= s.id %>">Leer más</a>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<section class="reviews">
  <div class="container">
    <h2>Opiniones</h2>

    <div class="reviews-embed">
